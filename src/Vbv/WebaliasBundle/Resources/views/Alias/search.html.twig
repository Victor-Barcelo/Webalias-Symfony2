{% extends 'VbvWebaliasBundle:Alias:layout.html.twig' %}

{% block title %} WebAlias - Buscar alias {% endblock %}

	{% block main %}

		<div class="container">
		
			<div class="row">
				
				<div class="col-md-4 col-md-offset-2">
					<h2>Consulta un alias</h2>
					<p>Puedes introducir un tag y un código y la página asociada aparecerá! También puedes introducir unicamente un tag y ver todas las páginas asociadas a ese tag.</p>
				</div>

				<div class="col-md-4 my-search">
					{{ form_start(form, {'role' : 'form'}) }}
					{{ form_errors(form) }}
					<div class="input-group input-group-lg">
						<span class="input-group-addon">#</span>
						{{ form_widget(form.tag, { 'attr': {'class': 'form-control', 'placeholder' : 'Introduce el Tag'}}) }}
					</div>
					<div class="input-group input-group-lg">
						<span class="input-group-addon">@</span>
						{{ form_widget(form.code, { 'attr': {'class': 'form-control', 'placeholder' : 'Introduce el Cdigo'}}) }}
					</div>
					<div class="row text-center">
						{{ form_widget(form.save, { 'attr': {'class': 'btn btn-default'}}) }}
						{{ form_end(form) }}
					</div>
				</div>

			</div>

			<div class="row text-center">
				{% if (searchSuccess is defined) and (searchSuccess == false) %}
					<div class="alert alert-danger" role="alert"><h4>No se han encontrado resultados para el tag <strong>#{{alias.tag}}</strong> 
						{% if (alias.code != '') %}
							y el código <strong>@{{alias.code}}</strong>
						{% endif %}	
					</h4></div>
				{% endif %}
			</div>

{% endblock %}

{% block footer %}
    {% block inlinejs %}
        <script type="text/javascript">
            window.onload = function() {
                $("#header-but-search").addClass("active");
                $("#header-but-create").removeClass("active");
            };
        </script>
    {% endblock %}
{% endblock %}