{% extends 'VbvWebaliasBundle:Alias:layout.html.twig' %}

{% block title %} WebAlias - Crear alias {% endblock %}

    {% block main %}

        <div class="container">
        
            <div class="row">
                
                <div class="col-md-4 col-md-offset-2">
                    <h2>Crea un alias</h2>
                    <p>Introducir un tag, un código y una página Web. En un instante tendrás un nuevo alias registrado con nosotros!</p>
                </div>

                <div class="col-md-4 my-create">
                    {{ form_start(form, {'role' : 'form'}) }}
                    {{ form_errors(form) }}
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon">#</span>
                        {{ form_widget(form.tag, { 'attr': {'class': 'form-control', 'placeholder' : 'Introduce el Tag'}}) }}
                    </div>
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon">@</span>
                        {{ form_widget(form.code, { 'attr': {'class': 'form-control', 'placeholder' : 'Introduce el Cdigo'}}) }}
                    </div>
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon">></span>
                        {{ form_widget(form.url, { 'attr': {'class': 'form-control', 'placeholder' : 'Introduce la pagina web'}}) }}
                    </div>
                    <div class="row text-center">
                        {{ form_widget(form.save, { 'attr': {'class': 'btn btn-default'}}) }}
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>

            <div class="row text-center">
                {% if (createSuccess is defined) and (createSuccess == false) %}
                    <div class="alert alert-danger" role="alert"><h4>Error, ya existe un alias con el tag y codigo introducidos</h4></div>
                {% endif %}
                {% if (createSuccess is defined) and (createSuccess == true) %}
                    <div class="alert alert-success" role="alert"><h4>El alias ha sido creado</h4></div>
                {% endif %}
            </div>

{% endblock %}

{% block footer %}
    {% block inlinejs %}
        <script type="text/javascript">
            window.onload = function() {
                $("#header-but-create").addClass("active");
                $("#header-but-search").removeClass("active");
            };
        </script>
    {% endblock %}
{% endblock %}